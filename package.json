{
  "name": "onex-utils",
  "version": "0.0.1",
  "description": "业务工具库，提供通用的能力",
  "main": "lib/index.js",
  "module": "es/index.js",
  "miniappConfig": {
    "main": "lib/miniapp/index",
    "main:wechat": "lib/wechat-miniprogram/index"
  },
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "scripts": {
    "commit": "git-cz",
    "build": "build-scripts build",
    "test": "jest",
    "start": "build-scripts start",
    "eslint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "eslint-fix": "npm run eslint -- --fix",
    "stylelint": "stylelint ./**/*.css",
    "lint": "npm run eslint && npm run stylelint",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "rax": "^1.1.0"
  },
  "engines": {
    "npm": ">=3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.alibaba-inc.com:varbee/utils.git"
  },
  "publishConfig": {
    "registry": "http://registry.npm.alibaba-inc.com"
  },
  "author": {
    "name": "lg208143"
  },
  "dependencies": {
    "dayjs": "^1.9.6",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "qs": "^6.9.4",
    "url-querystring": "^2.1.1"
  },
  "devDependencies": {
    "@alib/build-scripts": "^0.1.0",
    "@babel/plugin-transform-strict-mode": "^7.12.1",
    "@iceworks/spec": "^1.0.0",
    "@types/babel-core": "^6.25.6",
    "@types/jest": "^26.0.14",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.throttle": "^4.1.6",
    "@types/rax": "^1.0.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^26.1.0",
    "babel-plugin-replace-ts-export-assignment": "^0.0.2",
    "babel-preset-env": "^1.7.0",
    "build-plugin-component": "^1.0.0",
    "driver-universal": "^3.1.0",
    "eslint": "^6.8.0",
    "git-cz": "^4.7.1",
    "husky": "^4.3.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.1.2",
    "rax": "^1.1.0",
    "rax-test-renderer": "^1.0.0",
    "stylelint": "^13.7.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.3"
  },
  "defaultLanguage": "zh-cn",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix",
      "git add"
    ],
    "./src/**/*.{css,less}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "homepage": "https://unpkg.com/onex-utils@0.0.1/build/index.html"
}
